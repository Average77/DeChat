<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="200dp"
    android:layout_height="240dp"
    android:layout_gravity="center"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="5dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="4dp">

    <ImageView
        android:id="@+id/recy_msg_stag_iv"
        android:layout_width="match_parent"
        android:layout_height="200dp"

        android:layout_gravity="top"
        android:src="@drawable/ic_album_default" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/add_contacts_left_quotation_bg" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/add_contacts_right_quotation_bg" />

    <TextView
        android:id="@+id/recy_msg_stag_dis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:text="相距100公里"
        android:textSize="15sp" />
</android.support.v7.widget.CardView>
