<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/chat_voice_left_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView

            android:id="@+id/voice_left_image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_album_default" />

        <ImageView
            android:layout_toRightOf="@id/voice_left_image"
            android:layout_alignTop="@id/voice_left_image"
            android:id="@+id/chat_left_voice_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/receive_voice_icon_3"
            android:background="@drawable/message_chat_list_item_receive_bg_default"
            android:textColor="@color/toast_color"
            android:textSize="17sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:id="@+id/voice_left_second"
            android:layout_toRightOf="@id/voice_left_image"
            android:text="@string/second"/>
    </RelativeLayout>

</LinearLayout>