<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/text_right_image_text"
        android:layout_marginLeft="20dp"
        android:textSize="17sp"
        android:background="@drawable/message_chat_list_item_send_bg_default"
        android:layout_width="wrap_content"
        android:textColor="@color/toast_color"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/text_right_image" />
    <ImageView
        android:layout_centerVertical="true"
        android:src="@drawable/ic_album_default"
        android:id="@+id/text_right_image"
        android:layout_alignTop="@+id/text_right_image_text"
        android:layout_alignParentRight="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
         />

</RelativeLayout>