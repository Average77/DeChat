<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" >
        <shape >
            <corners android:radius="5dp" />
            <size
                android:width="100dp"
                android:height="20dp" />
            <stroke android:color="@color/tabber" android:width="1dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape >
            <corners android:radius="5dp" />
            <size
                android:width="100dp"
                android:height="20dp" />
            <solid android:color="@color/tabber"  />
        </shape>
    </item>

</selector>